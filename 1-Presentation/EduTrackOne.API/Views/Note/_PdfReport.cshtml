@model BulletinViewModel
@{
    // Partial pour génération PDF, sans layout
    Layout = null;
}

<div style="font-family:sans-serif; padding: 20px;">
    <h1 style="text-align:center; margin-bottom:20px;">@Model.SchoolName</h1>
    <h2 style="text-align:center; margin-bottom:30px;">Bulletin de Notes</h2>

    <table style="width:80%; margin:0 auto 30px; border-collapse: collapse;">
        <tr>
            <td style="padding:8px; text-align:center;">
                <strong>Classe :</strong> @Model.ClasseName
            </td>
            <td style="padding:8px; text-align:center;">
                <strong>Élève :</strong> @Model.EleveName
            </td>
            <td style="padding:8px; text-align:center;">
                <strong>Matricule :</strong> @Model.NoImmatricule
            </td>
        </tr>
    </table>

    <table style="width:80%; margin:0 auto; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="border: 1px solid #000; padding:8px; text-align:left;">Matière</th>
                <th style="border: 1px solid #000; padding:8px; text-align:center;">Moyenne</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Matieres)
            {
                <tr>
                    <td style="border: 1px solid #000; padding:8px;">@m.MatiereNom</td>
                    <td style="border: 1px solid #000; padding:8px; text-align:center;">@m.Moyenne.ToString("0.##")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
