@using EduTrackOne.Domain.Utilisateurs
@using EduTrackOne.Contracts.DTOs
@model CreateUserViewModel


<h1>@ViewData["Title"]</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
<form asp-controller = "User" asp-action= "Create" method="post">
    @Html.AntiForgeryToken()
  <div class="mb-3">
    <label asp-for="Identifiant" class="form-label">Login</label>
    <input asp-for="Identifiant" class="form-control"/>
    <span asp-validation-for="Identifiant" class="text-danger"/>
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email" class="text-danger"/>
  </div>
  @if (Model is CreateUserViewModel)
  {
    <div class="mb-3">
      <label asp-for="MotDePasse" class="form-label">Mot de passe</label>
      <input asp-for="MotDePasse" type="password" class="form-control"/>
      <span asp-validation-for="MotDePasse" class="text-danger"/>
    </div>
  }
    <div class="mb-3">
        <label asp-for="Role" class="form-label">Rôle</label>
        <select asp-for="Role" class="form-select"
                asp-items="Html.GetEnumSelectList<UserRoleDto>()">
            <option value="">-- Choisir --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="Statut" class="form-label">Statut</label>
        <select asp-for="Statut" class="form-select"
                asp-items="Html.GetEnumSelectList<UserStatusDto>()">
            <option value="">-- Choisir --</option>
        </select>
        <span asp-validation-for="Statut" class="text-danger" />
    </div>
  <button type="submit" class="btn btn-primary">Enregistrer</button>
  <a asp-action="Index" class="btn btn-secondary ms-2">Annuler</a>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
