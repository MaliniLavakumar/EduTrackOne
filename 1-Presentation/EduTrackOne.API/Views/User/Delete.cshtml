@model DeleteUserViewModel
@{
    ViewData["Title"] = $"Supprimer « {Model.Identifiant} » ?";
}
<h1>Supprimer @Model.Identifiant?</h1>
<form asp-controller="User" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Oui, supprimer</button>
    <a asp-controller = "User" asp-action="Index" class="btn btn-secondary ms-2">Non, annuler</a>
</form>
