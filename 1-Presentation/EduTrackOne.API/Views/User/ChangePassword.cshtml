@model ChangePasswordViewModel
@{
    ViewData["Title"] = $"Changer le mot de passe de « {Model.Identifiant} »";
}

<h1>Changer le mot de passe de « @Model.Identifiant »</h1>

<form asp-controller="User" asp-action="ChangePassword" asp-route-id="@Model.UserId" method="post">
    <input asp-for="UserId" type="hidden" />
    <div class="mb-3">
        <label asp-for="AncienMotDePasse" class="form-label">Ancien mot de passe</label>
        <input asp-for="AncienMotDePasse" type="password" class="form-control" />
        <span asp-validation-for="AncienMotDePasse" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="NouveauMotDePasse" class="form-label">Nouveau mot de passe</label>
        <input asp-for="NouveauMotDePasse" type="password" class="form-control" />
        <span asp-validation-for="NouveauMotDePasse" class="text-danger" />
    </div>
    <button type="submit" class="btn btn-primary">Valider</button>
    <a asp-controller="@(User.IsInRole("Admin") ? "User" : "Home")"
       asp-action="@(User.IsInRole("Admin") ? "Index" : "Index")"
       class="btn btn-secondary ms-2">Annuler</a>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
