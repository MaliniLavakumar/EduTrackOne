@using EduTrackOne.Application.Inscriptions.GetInscriptionsByClasse
@model ClasseDetailsViewModel
@{
    ViewData["Title"] = "Détails de la classe";
    Layout = "_Layout";
}

<h1>@ViewData["Title"] : @Model.NomClasse</h1>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Inscription" asp-route-classeId="@Model.ClassId" class="btn btn-success me-2" data-bs-toggle="tooltip" title="Nouvelle inscription">
        <i class="bi bi-person-plus"></i>
    </a>
    <a asp-action="AddNotesForClasse" asp-controller="Classe" asp-route-classeId="@Model.ClassId" class="btn btn-primary me-2" data-bs-toggle="tooltip" title="Ajouter des notes">
        <i class="bi bi-journal-text"></i>
    </a>
    <a asp-action="AddPresencesForClasse" asp-controller="Classe" asp-route-classeId="@Model.ClassId" class="btn btn-primary" data-bs-toggle="tooltip" title="Ajouter des présences">
        <i class="bi bi-calendar-check"></i>
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Élève</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var insc in Model.Inscriptions)
        {
            <tr>
                <td>@insc.EleveNom</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Eleve" asp-action="Details" asp-route-id="@insc.EleveId" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Détails">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-controller="Eleve" asp-action="Edit" asp-route-id="@insc.EleveId" class="btn btn-sm btn-outline-warning" data-bs-toggle="tooltip" title="Modifier">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Eleve" asp-action="Delete" asp-route-id="@insc.EleveId" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Supprimer">
                            <i class="bi bi-trash"></i>
                        </a>
                        <a asp-controller="Classe" asp-action="DetailsNotes" asp-route-id="@insc.InscriptionId" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Voir des notes">
                            <i class="bi bi-file-earmark-text"></i>
                        </a>
                        <a asp-controller="Classe" asp-action="DetailsPresences" asp-route-id="@insc.InscriptionId" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Voir des présences">
                            <i class="bi bi-calendar2-week"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>