@model EduTrackOne.Application.Classes.AddInscription.AddInscriptionCommand
@{
    ViewData["Title"] = "Nouvelle inscription";
}

<h1>@ViewData["Title"] pour la classe @Model.ClasseId</h1>
@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}

<form asp-action="CreateInscription" asp-route-id="@Model.ClasseId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ClasseId" />

    <div class="mb-3">
        <label asp-for="NoImmatricule" class="form-label">Numéro d'immatricule</label>
        <input asp-for="NoImmatricule" class="form-control" />
        <span asp-validation-for="NoImmatricule" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="DateDebut" class="form-label">Date de début</label>
            <input asp-for="DateDebut" type="date" class="form-control" />
            <span asp-validation-for="DateDebut" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="DateFin" class="form-label">Date de fin</label>
            <input asp-for="DateFin" type="date" class="form-control" />
            <span asp-validation-for="DateFin" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-controller="Classe" asp-action="Details" asp-route-id="@Model.ClasseId" class="btn btn-secondary ms-2">Annuler</a>
</form>